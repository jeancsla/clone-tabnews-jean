{
  "name": "projeto",
  "version": "1.0.0",
  "description": "<h1 align=\"center\"> DevLinks </h1>",
  "homepage": "https://github.com/jeancsla/projeto#readme",
  "bugs": {
    "url": "https://github.com/jeancsla/projeto/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeancsla/projeto.git"
  },
  "license": "MIT",
  "author": "",
  "main": "script.js",
  "scripts": {
    "predev": "",
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "postdev": "npm run services:stop",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "migrations:down": "node-pg-migrate --migrations-dir infra/migrations down",
    "lint:eslint:check": "next lint --dir .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,env,yml,yaml}": [
      "secretlint"
    ]
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "claude": "0.1.1",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.5",
    "node-pg-migrate": "^7.6.1",
    "pg": "8.18.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-conventional": "19.2.2",
    "@secretlint/secretlint-rule-preset-recommend": "11.3.1",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.8.1",
    "secretlint": "11.3.1",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
